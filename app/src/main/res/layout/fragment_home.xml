<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Home.Fragments.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/normalPadding"
        android:paddingRight="@dimen/normalPadding"
        android:paddingBottom="@dimen/normalPadding">

        <androidx.core.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imguser"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                   android:layout_marginTop="3dp"
                        android:src="@drawable/user" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/imguser"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hello"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/d_style"
                            android:text=""
                            android:textColor="@color/green1" />

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nunitoblack"
                            android:text=""
                            android:textColor="@color/green2" />
                    </LinearLayout>


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                           android:layout_marginTop="5dp"
                        android:src="@drawable/notification" />






                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="20dp"


                        >

                        <com.denzcoskun.imageslider.ImageSlider
                            android:id="@+id/slider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:iss_auto_cycle="true"
                            app:iss_delay="3000"
                            android:gravity="center"
                            app:iss_corner_radius="10"
                            app:iss_period="3000"

                            />

                    </androidx.cardview.widget.CardView>




                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >

                    <ImageView
                        android:id="@+id/imageViewsActivity"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/product"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/imageViewsActivity"
                        android:fontFamily="@font/bariol_bold"
                        android:text="Categories"

                        android:textSize="20sp" />

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:scrollbars="none"
                       android:scrollbarStyle="insideInset"

                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >




                        <androidx.cardview.widget.CardView
                            android:id="@+id/chair"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            app:cardCornerRadius="100dp"
                            android:layout_margin="2dp"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/chair"
                                android:padding="7dp"
                                android:background="#f1dbb6"
                                />


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/sofa"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            app:cardCornerRadius="100dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="20dp"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/sofa"
                                android:padding="7dp"
                                android:background="#f1dbb6"
                                />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/table1"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            app:cardCornerRadius="100dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="20dp"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/dining_table"
                                android:padding="7dp"
                                android:background="#f1dbb6"
                                />
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/table3"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            app:cardCornerRadius="100dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="20dp"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/dining_table"
                                android:padding="7dp"
                                android:background="#f1dbb6"
                                />
                        </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/table4"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                app:cardCornerRadius="100dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="20dp"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/dining_table"
                                    android:padding="7dp"
                                    android:background="#f1dbb6"
                                    />
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/product"
                      />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/imageView"
                        android:fontFamily="@font/bariol_bold"
                        android:text="popular courses"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvSeeMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="see more"
                        android:fontFamily="@font/nunitobold"
                        android:textColor="@color/green"
                        android:textSize="@dimen/headerMoreTextSize"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>





</FrameLayout>