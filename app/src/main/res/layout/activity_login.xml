<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:background="@drawable/blue_bg"
            android:backgroundTint="@color/green4"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitoblack"
                    android:text="LOGIN"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunitosemi"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="65dp"
            android:fontFamily="@font/bariol_bold"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/green1"
            android:textSize="45px" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="16.7dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/input_bg">

            <!-- INPUT -->
            <EditText
                android:id="@+id/log_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img2"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins"
                android:hint="Enter Your Email Address"

                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="@color/green2"
                android:textColorHint="@color/grey"
                android:textSize="13sp" />

            <!-- ICON -->
            <ImageView
                android:id="@+id/img2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:src="@drawable/em"
                app:tint="@color/price_green_color" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="16.7dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/input_bg">

            <!-- INPUT -->
            <EditText
                android:id="@+id/logpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img3"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/grey"
                android:textSize="13sp" />

            <!-- ICON -->
            <ImageView
                android:id="@+id/img3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:src="@drawable/lock"
                app:tint="@color/price_green_color" />


            <ImageView
                android:id="@+id/show_pass_img"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:src="@drawable/hide"
                app:tint="@color/green1" />

        </RelativeLayout>

        <TextView
            android:id="@+id/btnlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="10.7dp"
            android:layout_marginRight="62dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/nunitobold"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="Login "
            android:textColor="#ffffff"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/forg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="62dp"
            android:fontFamily="@font/nunitobold"
            android:gravity="end"
            android:text="Forgot password?"
            android:textColor="@color/green2"
            android:textSize="10sp"
            android:textStyle="bold" />


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:padding="10dp"
              android:orientation="vertical"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                    android:fontFamily="@font/bariol_bold"
                  android:textColor="@color/gray"
                  android:text="OR"/>
              <com.google.android.gms.common.SignInButton
                  android:layout_width="220dp"
                  android:layout_height="wrap_content"/>
          </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:fontFamily="@font/nunitosemi"
                android:text="If you dont have account? " />

            <TextView
                android:id="@+id/Register_Click_Me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosemi"
                android:text="Click Me!"

                android:textColor="@color/green1" />




        </LinearLayout>


    </LinearLayout>


</RelativeLayout>